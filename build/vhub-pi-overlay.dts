/*
 * Device Tree overlay for Virtual Hub HAT by Kubica
 *
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@1 {
		target = <&spi0>;
        __overlay__ {
			/* needed to avoid dtc warning */
    		#address-cells = <1>;
			#size-cells = <0>;
 			status = "okay";
			vhub: vhub@48 {
				compatible = "hubshield,v-hub";
				reg = <0x0>; /* chip select */
				pinctrl-names = "default";
				pinctrl-0 = <&vhub_pins>;
				interrupt-parent = <&gpio>;
				interrupts = <5 2 6 2>; /* IRQ_TYPE_EDGE_FALLING */
				reset-gpios = <&gpio 24 1>; // GPIO_ACTIVE_HIGH
				max-ports = <5>; // count of virtual hub ports
				endpoints = <15>; // count of hub generic endpoints
				gpio-controller;
				#gpio-cells = <2>;
				spi-max-frequency = <8000000>;
			};
		};
	};
	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			vhub_pins: vhub_pins {
				brcm,pins = <5 6 24>;	// irq, dtrdy, reset   		
				brcm,function = <0 0 1>; // input, input, output
				brcm,pull = <1 1 0>;     // down, down, none
			};
		};
	};

	__overrides__ {
		ports = <&vhub>,"max-ports:0";
		spi_irq = <&vhub>,"interrupts:0";
		spi_dtrdy = <&vhub>,"interrupts:2";		
		spi_cs =  <&vhub>,"reg:0";
		speed =  <&vhub>,"spi-max-frequency:0";
    };

};
